extends ../layout

block content
    div.books-header
        h1.books-title Library
        p
            a.books-button(href='/books/new') Create New Book
        include books-search
        include authors-search
        include genres-search
            
    table
        thead
            tr
                th Title
                th Author
                th Genre
                th Year
        tbody
            each book in books
                tr
                    td.book
                        a(href=`/books/${book.id}`)= book.title
                    td.author= book.author
                    td.genre= book.genre
                    td.year= book.year
extends layout

block content

    h1= book.title
    .form-container
        form(action=`/books/${id}`, method="post")
            include form       
        form(method="post", action=`/books/${book.id}/delete`, onsubmit="return confirm('Do you really want to delete this book?');")
            p
                a(class="cancel-btn", href="/") Cancel
            p
                input(class="del-btn", type="submit", value="Delete Book")